<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FocusViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/focus_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titolo collezione"
                style="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/focus_description"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrizione"
                android:maxLines="5"
                />

            <TextView
                android:id="@+id/focus_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PrioritÃ : 10"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/focus_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"

                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:visibility="gone"
                />



        </LinearLayout>










        <ImageView
            android:id="@+id/picked_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"

            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>