<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/logs_main_from_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log author"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/color_accent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/logs_is_admin"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_admin"
        app:tint="@color/color_accent"
        android:layout_margin="10dp"

        android:visibility="gone"
        />

    <TextView
        android:id="@+id/log_main_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/logs_main_from_user"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="questa Ã¨ la data lunga"
        android:textColor="@color/colorIcons"
        android:layout_marginLeft="10dp"

        android:fontFamily="@font/ubuntu_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"

        android:paddingBottom="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>